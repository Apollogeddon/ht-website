---
import { CLASSES } from "../classes";
import {
	ABOUT_CONTENT,
	COMPANY_OVERVIEW,
	COMPANY_VALUES,
	CONTACT_INFO,
	PRINCIPAL_CONSULTANT,
	SITE_TITLE,
	UI_LABELS,
	ROUTES,
} from "../consts";
import { ICONS } from "../styles";
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout title={ABOUT_CONTENT.title}>
  {/* Header Section */}
  <section class={CLASSES.layout.sectionWhite}>
    <div class={CLASSES.layout.container}>
      <div class={CLASSES.layout.containerNarrow}>
        <h1 class={`${CLASSES.typography.h1Page} mb-6`}>{ABOUT_CONTENT.title}</h1>
        <p class={CLASSES.typography.lead}>
          {ABOUT_CONTENT.intro}
        </p>
      </div>
    </div>
  </section>

  {/* Overview Section */}
  <section class={CLASSES.layout.sectionMuted}>
    <div class={CLASSES.layout.container}>
      <div class={CLASSES.layout.containerNarrow}>
        <div class="grid grid-cols-1 lg:grid-cols-1 gap-12">
          <div>
            <h2 class={`${CLASSES.typography.h2Page} mb-8`}>{COMPANY_OVERVIEW.title}</h2>
            <p class={`${CLASSES.typography.body} mb-12`}>
              {COMPANY_OVERVIEW.description}
            </p>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-x-12 gap-y-6">
              {COMPANY_OVERVIEW.points.map((point) => (
                <div class="flex items-start gap-3">
                  <div class={CLASSES.visual.checkIconWrapper}>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-brand-600 dark:text-brand-400" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d={ICONS.check} clip-rule="evenodd" />
                    </svg>
                  </div>
                  <span class={CLASSES.typography.listItemLabel}>{point}</span>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  {/* Values Section */}
  <section class={CLASSES.layout.sectionWhite}>
    <div class={CLASSES.layout.container}>
      <div class={CLASSES.layout.containerNarrow}>
        <h2 class={`${CLASSES.typography.h2Page} mb-12 text-center`}>{ABOUT_CONTENT.valuesTitle}</h2>
        <div class={CLASSES.layout.grid3}>
          {COMPANY_VALUES.map((value) => (
            <div class="space-y-4">
              <div class={CLASSES.visual.accentLine}></div>
              <h3 class={CLASSES.typography.h3}>{value.title}</h3>
              <p class="text-neutral-600 dark:text-neutral-400 italic text-sm leading-relaxed">{value.description}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  {/* Profile Section */}
  <section class={CLASSES.layout.sectionMuted}>
    <div class={CLASSES.layout.container}>
      <div class={CLASSES.layout.containerNarrow}>
        <div class="flex flex-col md:flex-row gap-12 items-center md:items-start pt-8">
          <div class="relative">
             <div class={CLASSES.visual.avatarPlaceholder}>
                <span class={CLASSES.visual.placeholderText}>{UI_LABELS.photoPlaceholder}</span>
             </div>
             <div class={CLASSES.visual.avatarAccent}></div>
          </div>
          <div class="flex-grow">
            <h2 class={`${CLASSES.typography.h2Page} mb-2`}>{PRINCIPAL_CONSULTANT.name}</h2>
            <p class={CLASSES.typography.roleBadge}>{PRINCIPAL_CONSULTANT.role}</p>
            <div class="space-y-6">
              <p class={CLASSES.typography.body}>
                {PRINCIPAL_CONSULTANT.bio} 
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</MainLayout>
</MainLayout>

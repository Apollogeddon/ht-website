---
import { CLASSES } from "../classes";
import { NAVIGATION, SITE_TITLE, ROUTES } from "../consts";
import { COLORS } from "../styles";
import ThemeToggle from "./Themes.astro";
import { Image } from "astro:assets";
import logoImage from "../assets/logo.png";
---

<header class={CLASSES.layout.header} style={{ backgroundColor: COLORS.theme.header.bg, borderColor: COLORS.theme.header.border }}>
  <div class={CLASSES.layout.headerContainer}>
    <a href={ROUTES.HOME} class="flex items-center">
      <Image src={logoImage} alt={SITE_TITLE} class={CLASSES.layout.headerLogo} width={200} height={48} loading="eager" />
    </a>
    <div class="flex items-center">
      <nav class="hidden md:block">
        <ul class={CLASSES.layout.navHorizontal}>
          {NAVIGATION.map((item) => {
            const pathname = Astro.url.pathname.replace(/\/$/, "");
            const href = item.href.replace(/\/$/, "");
            const isActive = pathname === href || (href !== "" && pathname.startsWith(href));
            
            return (
              <li>
                <a 
                  href={item.href} 
                  class={`${CLASSES.typography.navLink} ${isActive ? CLASSES.typography.navLinkActive : ""}`}
                >
                  {item.label}
                </a>
              </li>
            );
          })}
        </ul>
      </nav>
      <div class="ml-4 border-l pl-4" style={{ borderColor: COLORS.theme.header.border }}>
        <ThemeToggle />
      </div>
    </div>
  </div>
</header>
